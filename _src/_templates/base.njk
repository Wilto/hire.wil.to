		<link rel="icon" type="image/png" href="/_assets/img/icon-32.png" sizes="32x32">

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"@id": "{{ data.url }}#main",
				"givenName": "Mat",
				"familyName": "Marquis",
				"alternateName": "Wilto",
				"description": "Front-End Developer",
				"email": "mat@matmarquis.com",
				"image": "{{ data.url }}/_assets/img/mm.jpg",
				"jobTitle": "Independent Consultant",
				"knowsLanguage": "sgn-ase",
				"sameAs" : [
					"https://front-end.social/@Wilto",
					"https://github.com/wilto"
				] 
			}
		</script>

		<meta property="og:site_name" content="{{ data.name }}">
		<meta property="og:title" content="{{ data.title }}">
		<meta property="og:url" content="{{ data.url }}">
		<meta property="og:description" content="{{ lede }}">
		<meta property="og:image" content="{{ data.url }}/_assets/img/card.gif">
		<meta property="og:image:alt" content="{{ data.description }}">

		<meta name="author" content="{{ data.author.name }}">

		<link rel="preload" href="/_assets/fonts/TiemposHeadline-Regular.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/_assets/fonts/AdelleSans-Light.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/_assets/fonts/TiemposTextWeb-Regular.woff2" as="font" type="font/woff2" crossorigin>

		<link rel="stylesheet" href="/_assets/css/all.css">
	</head>
	<body>

		<header>
			<nav class="nav">
				<a href="/">
					<span class="a11y-only">Home</span>
					<svg class="w-logo" aria-hidden="true" viewBox="0 0 210 210" width="125" height="125" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><defs><path id="a" d="M.412.353h206.647V207H.412z"/></defs><g fill="none" fill-rule="evenodd"><mask id="b" fill="#fff"><use xlink:href="#a"/></mask><path id="w-bg" d="M207.059 103.677c0 57.063-46.26 103.323-103.323 103.323C46.672 207 .412 160.74.412 103.677.412 46.613 46.672.353 103.736.353s103.323 46.26 103.323 103.324" fill="#12073F" mask="url(#b)"/><path id="w-fore" fill="#FFF" d="M101.405 77.63H80.878L93.36 99.657l-5.579 9.812L69.614 77.63H49.087l38.578 68.359.08-.137.077.137 15.845-28.141 15.947 28.141 10.38-18.255z"/><path fill="#EF4136" d="M137.823 77.647L125.55 99.23h20.65l12.183-21.425z"/></g></svg>
				</a>
			</nav>
		</header>

		{% block inner %}
    {% endblock %}

		<footer class="site-foot">
			<address class="me">
				<dl class="me">
					<div>
						<dt>GitHub</dt>
						<dd><a rel="me" href="https://github.com/wilto">https://github.com/<b>wilto</b></a></dd>
					</div>
					<div>
						<dt>Mastodon</dt>
						<dd><a rel="me" href="https://front-end.social/@wilto">https://front-end.social/@<b>wilto</b></a></dd>
					</div>
					<div>
						<dt>Bluesky</dt>
						<dd><a rel="me" href="https://bsky.app/profile/wil.to">https://bsky.app/profile/@<b>wil.to</b></a></dd>
					</div>
				</dl>
			</address>
			<div class="site-meta">
				<p>Built with <a href="https://www.11ty.io/">Eleventy</a>. The source is available on <a href="https://github.com/Wilto/hire.wil.to">GitHub</a>.</p>
				<p>For questions, comments, or problems using the site, <a href="https://github.com/Wilto/hire.wil.to/issues">report an issue</a>.</p>
		</div>
		</footer>

		<script>
			(function() {
				if( 'serviceWorker' in navigator && location.hostname !== "localhost" ) {
					navigator.serviceWorker.register('sw.js');
				}
				var mm = window.matchMedia( "( prefers-color-scheme: dark )" ),
					setTheme = function( e ) {
						document.querySelector( '[name="theme-color"]' ).setAttribute( "content", ( e.matches ? "#3c3d34" : "#12073f" ) );
					};

				mm.addEventListener("change", setTheme );
				setTheme( mm );

				document.body.addEventListener('pointermove', ({ x, y }) => {
					const doc = document.documentElement;
						doc.style.setProperty( '--x', x );
						doc.style.setProperty( '--y', y );
					});
			}());
		</script>
	</body>
</html>
